{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
  "name": "brezel",
  "version": "0.1.0",
  "description": "Modern C++20 Tensor Framework with CUDA support",
  "homepage": "https://github.com/salgue441/brezel-framework",
  "documentation": "https://salgue441.github.io/brezel-framework",
  "license": "MIT",
  "dependencies": [
    {
      "name": "fmt",
      "version>=": "10.0.0"
    },
    {
      "name": "tbb",
      "version>=": "2021.9.0"
    },
    {
      "name": "boost-container",
      "version>=": "1.82.0"
    },
    {
      "name": "boost-system",
      "version>=": "1.82.0"
    },
    {
      "name": "boost-filesystem",
      "version>=": "1.82.0"
    },
    {
      "name": "boost-align",
      "version>=": "1.82.0"
    },
    {
      "name": "boost-stacktrace",
      "version>=": "1.82.0"
    },
    {
      "name": "boost-smart-ptr",
      "version>=": "1.82.0"
    },
    {
      "name": "boost-circular-buffer",
      "version>=": "1.82.0"
    },
    {
      "name": "boost-format",
      "version>=": "1.82.0"
    },
    {
      "name": "tl-expected",
      "version>=": "1.1.0"
    }
  ],
  "builtin-baseline": "78b61582c9e093fda56a01ebb654be15a0033897",
  "features": {
    "tests": {
      "description": "Build tests",
      "dependencies": [
        {
          "name": "gtest",
          "version>=": "1.13.0"
        }
      ]
    },
    "cuda": {
      "description": "Add CUDA support",
      "dependencies": [
        {
          "name": "cuda"
        },
        {
          "name": "cub",
          "version>=": "2.1.0"
        },
        {
          "name": "cutlass",
          "version>=": "3.1.0"
        }
      ]
    },
    "benchmarks": {
      "description": "Build benchmarks",
      "dependencies": [
        {
          "name": "benchmark",
          "version>=": "1.8.3"
        }
      ]
    }
  }
}
